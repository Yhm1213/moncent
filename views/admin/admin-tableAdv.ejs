<%include header-slider.ejs%>

  <!-- content start -->
  <div class="admin-content">
    <div class="admin-content-body">
      <div class="am-cf am-padding am-padding-bottom-0">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">表格</strong> / <small>Table</small></div>
      </div>

      <hr>

      <div class="am-g">
        <div class="am-u-sm-12 am-u-md-3">
          <div class="am-form-group">
            <select id ="selectbox" data-am-selected="{btnSize: 'sm'}">
              <option value="option1">Gid</option>
              <option value="option2">title</option>
              <option value="option2">context</option>
              <option value="option2">users$Uid</option>

             
            </select>
          </div>
        </div>
        <div class="am-u-sm-12 am-u-md-3">
          <div class="am-input-group am-input-group-sm">
            <input id="selectinput"  type="text" class="am-form-field">
          <span class="am-input-group-btn">
            <button onclick = "selectdata()" class="am-btn am-btn-default" type="button">搜索</button>
          </span>
          </div>
        </div>
      </div>

      <div class="am-g">
        <div class="am-u-sm-12">
          <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
              <thead>
              <tr>
                <th class="table-id">Gid</th><th class="table-title">title</th><th class="table-type">context</th><th class="table-type">tumb_src</th><th class="table-type">users$Pid</th><th class="table-set">操作</th>
              </tr>
              </thead>
              <tbody>
             
              
             <% data.forEach((item)=>{ %>
              <tr>
                <td><%=item.Gid%></td>
                <td><%=item.title%></td>
                <td><%=item.context%></td>
                <td><%=item.tumb_src%></td>
                <td><%=item.users$Pid%></td>


                <td>
                  <div class="am-btn-toolbar">
                    <div class="am-btn-group am-btn-group-xs">
                      <a href="/Advedit?id=<%=item.Gid%>" class="am-btn am-btn-default am-btn-xs am-text-secondary"><span class="am-icon-pencil-square-o"></span> 编辑</a>
                      <a href="/Advdelet?id=<%=item.Gid%>" class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span class="am-icon-trash-o"></span> 删除</a>
                    </div>
                  </div>
                </td>
              </tr>
             <%})%>

              
              </tbody>
            </table>
            <div class="am-cf">
               共 <%=data.length%> 条记录
            </div>
            <hr />
            <p>注：.....</p>
          </form>
        </div>

      </div>
    </div>

    <footer class="admin-content-footer">
      <hr>
      <p class="am-padding-left">© 2014 AllMobilize, Inc. Licensed under MIT license.</p>
    </footer>

  </div>
  <!-- content end -->
</div>

<a href="#" class="am-icon-btn am-icon-th-list am-show-sm-only admin-menu" data-am-offcanvas="{target: '#admin-offcanvas'}"></a>

<%include footer.ejs%>
<script type="text/javascript">

function selectdata(){
var myselect=document.getElementById("selectbox");
var index=myselect.selectedIndex ; 
var selecttext = myselect.options[index].text;

var selectinput = document.getElementById("selectinput");
var inputtext = selectinput.value;
//console.log(inputtext);

this.location.href='/Advselect?selecttext='+selecttext+'&inputtext='+inputtext;
  
}


</script>